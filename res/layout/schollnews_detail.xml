<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8B0000"
        android:gravity="center_horizontal"
        android:padding="8dip"
        android:text="浙师新闻"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dip"
        android:text="校领导与160余名留校中外学生共度除夕"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/date"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal|center_vertical"
            android:text="日期： 2015-2-19 "
            android:textSize="12sp" />

        <TextView
            android:id="@id/author"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal|center_vertical"
            android:text="作者： 新中"
            android:textSize="12sp" />

        <TextView
            android:id="@id/deptname"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal|center_vertical"
            android:text="供稿单位： 宣传部"
            android:textSize="12sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@id/news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:text="　2月18日，大年三十的傍晚，国际交流中心开元厅内喜气洋洋，充满欢声笑语。学校为160余名留校过年的中外学生准备了丰盛的年夜饭，喜迎羊年新春。校党委书记陈德喜、副校级巡视员王辉以及学工部、研工部、国际交流合作处、国际学院负责人与中外学生共进“团圆餐”，共享中国年。
　　王辉代表学校向留校过年的中外学生拜早年。在简要回顾了学校2014年发展取得的成绩后，王辉说，展望2015年，我们要继续发扬“蛮拼”精神，满载信心、决心和正能量，按照“差异化、特色化、超常规发展”的新思路，努力聚合力、解难题、促发展，实现“提升质量、提升特色、提升效益”的新目标，全力办好“让学生满意、让教师幸福、让家长放心”的大学，推进学校各项事业扬帆远航、再谱新章。 王辉最后提议大家共同举杯，祝福新年，祝愿中国梦、师大梦以及每一个美好的梦想都能美梦成真。"
            android:textSize="14sp" />
    </ScrollView>

</LinearLayout>